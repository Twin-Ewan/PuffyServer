{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "sourceMap": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }